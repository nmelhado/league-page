{
  "root": true,
  "env": {
    "es2021": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "project": "./tsconfig.lint.json" },
  "plugins": ["import", "@typescript-eslint"],
  "ignorePatterns": [
    "scripts/*",
    "benchmark/*",
    "ava.config.js",
    "esbuild-hook.js"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:eslint-comments/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/typescript",
    "prettier"
  ]
}
